<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - AvansedFood</title>

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          crossorigin="anonymous" />

    <script src="https://kit.fontawesome.com/ee9566b270.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>

    <header>
        <div class="container">
            <div class="row align-items-center">
                <div id="header-e1" class="col-2">
                    <a asp-controller="Home" asp-action="Index">
                        <img id="logo" src="~/images/AvansedFoodLogo.png" alt="AvansedFoodLogo" />
                    </a>
                </div>
                <div id="header-e2" class="col-8">
                    <h1>Avansed Food</h1>
                </div>
            </div>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.3.min.js"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
